[mysqld]
#Max packetlength to send/receive from to server.
max-allowed-packet=64M
user=<%= username %>
datadir=<%= database_files_dir %>
<%- if port -%>
port= <%= port %>
<% else %>
skip-networking
<%- end -%>
socket = <%= socket %>
general-log-file=<%= log_file%>
log-error=<%= error_log_file %> 
character-set-server = utf8
pid-file=<%= pid_file %> 
log-warnings=0

#This option makes InnoDB to store each created table into its own .ibd file.
innodb-file-per_table=1

[mysqladmin]
socket = <%= socket %>

[mysql]
socket = <%= socket %>

[mysqldump]
socket = <%= socket %>