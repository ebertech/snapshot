[mysqld]
#Max packetlength to send/receive from to server.
max_allowed_packet=64M
user=<%= username %>
datadir=<%= database_files_dir %>
<%- if port -%>
port= <%= port %>
<% else %>
skip-networking
<%- end -%>
socket = <%= socket %>
general_log_file=<%= log_file%>
log_error=<%= error_log_file %> 
character_set_server = utf8
pid_file=<%= pid_file %> 
log_warnings=0

#This option makes InnoDB to store each created table into its own .ibd file.
innodb_file_per_table=1

[mysqladmin]
socket = <%= socket %>

[mysql]
socket = <%= socket %>

[mysqldump]
socket = <%= socket %>